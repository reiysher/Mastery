{
  "ConnectionStrings": {
    "Database": "Host=mastery.database;Port=5432;Database=mastery;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "mastery.redis:6379"
  },
  "Authentication": {
    "Audience": "account",
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuerSigningKey": true,
      "IssuerSigningKey": "JMkhjBJHBVHVHUVjhVjhvhjjhvJGVHGvGUv",
      "ValidateIssuer": true,
      "ValidateLifetime": true,
      "ValidateAudience": true,
      "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role",
      "ClockSkew": 0,
      "ValidIssuers": [
        "http://localhost:8000/identity"
      ]
    }
  },
  "JwtSettings": {
    "LoginProvider": "Mastery.Identity",
    "Key": "JMkhjBJHBVHVHUVjhVjhvhjjhvJGVHGvGUv",
    "TokenExpirationInMinutes": 5,
    "RefreshTokenExpirationInDays": 7
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://mastery.seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Mastery.Api"
    }
  }
}
